<a 
	href="{{ route('posts.create') }}"
	class="button is-info is-primary is-block is-medium" 
>New post</a>

<br>

<aside class="menu">
	<p class="menu-label">
		Tags
	</p>

	<ul class="menu-list">

		@each(tag in tags.toJSON())

			<li>
				<a 
					href="{{ route('posts.tags', { tag: tag.slug }) }}" 
					class="is-info{{ request.match(['/posts/tags/' + tag.slug]) ? ' is-active' : '' }}"
				>{{ tag.name }}</a>
			</li>

		@endeach
	</ul>
</aside>